#
# bspwm hotkeys
#

alt + ctrl + Escape
	bspc quit

# Close window
alt + w
	bspc window -c

alt + t
	bspc desktop -l next

# Equalize areas
alt + b
	bspc desktop -B

# Toggle floating and fullscreen modes
alt + {s,f}
	bspc window -t {floating,fullscreen}

# Switch to last window and desktop
alt + {grave,Tab}
	bspc {window,desktop} -f last

# Swap places with the last window
alt + apostrophe
	bspc window -s last

# Cycle through window history
alt + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

alt + y
	bspc window -w last.manual

# Swap with largest window
alt + m
	bspc window -s biggest

# Focus and swap with nearby windows
alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# Circulate focus within desktop
alt + {_,shift + }c
	bspc window -f {next,prev}

# Cycle windows within desktop
alt + {comma,period}
	bspc desktop -C {backward,forward}

# Cycle through desktops
alt + bracket{left,right}
	bspc desktop -f {prev,next}

# Preselect a splitting area of the current window
alt + super + {h,j,k,l}
	bspc window -p {left,down,up,right}

# Cancel preselection of current window or all windows in the desktop
alt + super + {_,shift + }space
	bspc {window -p cancel,desktop -c}

# Make windows larger
alt + ctrl + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

# Make windows smaller
alt + ctrl + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

alt + ctrl + {1-9}
	bspc window -r 0.{1-9}

# Move window to numbered desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

# Focus clicked window
~button1
	bspc pointer -g focus

# Move or resize window
alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

# Open terminal
alt + Return
	urxvt

alt + ctrl + t
	urxvt

alt + space
	dmenu_run

# Make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd
